            {"role": "admin", "methods": ["GET", "POST", "PUT", "DELETE"]}
        ]
    },

    {
        "path": "/rest/cart*",
        "roles":[
            {"role": "user", "methods": ["GET"]}
        ]
    },

    {
        "path": "/rest/cart-item*",
        "roles":[
            {"role": "user", "methods": ["POST"]}
        ]
    },

    {
        "path": "/rest/comments*",
        "roles":[
            {"role":"*", "methods": ["GET"]},
            {"role": "user", "methods": ["GET", "POST"]}
        ]
    },

    {
        "path": "/rest/login",
        "roles":[
            {"role": "user", "methods": ["GET", "DELETE"]},
            {"role": "anonymous", "methods": ["POST"]}        
        ]
    },

    {
        "path":"/rest/users", 
        "roles":[ 
